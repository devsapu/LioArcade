{
  "name": "lioarcade-backend",
  "version": "1.0.0",
  "description": "Backend API for LioArcade gamified learning platform",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "node --watch src/server.js",
    "start": "node src/server.js",
    "postinstall": "prisma generate",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "deploy": "prisma db push --accept-data-loss && node src/server.js"
  },
  "keywords": [
    "learning",
    "gamification",
    "education"
  ],
  "author": "Sapumal Thepulangoda",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "prisma": "^5.7.1"
  }
}
